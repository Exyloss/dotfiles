#!/bin/sh
# Ce script permet d'installer tous les scripts et fichiers de config
echo "Êtes-vous sûr de vouloir installer cette config ?\nVos fichiers seront re-écrits. (O/n)"
read choise
if [ "$choise" = "o" ]; then
	sh dep-install
	cp -r .local/bin/ ~/.local/
	cp -r .config ~/
	cp .xinitrc .zshenv ~/
	cd ~/.config/dmenu
	sudo make clean install
	cd ../dwm
	sudo make clean install
	git clone https://github.com/torrinfail/dwmblocks ~/dwmblocks
	cp ~/.config/dwmblocks/blocks.def.h ~/dwmblocks/
	mv dwmblocks ~/.config/
	exit 1
fi
echo "Opération annulée."
exit 1
