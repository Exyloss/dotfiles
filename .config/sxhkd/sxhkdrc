#Raccourcis universels
super + shift + e
	dpower
super + a
	dmenu_run
super + shift + m
	dmount
super + shift + u
	dumount
super + w
	"$BROWSER"
super + shift + k
    keepread-dmenu
super + n
	"$TERMINAL" -t spterm -e ncmpcpp
super + shift + l
	slock
super + e
	"$TERMINAL" -t spterm -e lfrun
super + Return
	"$TERMINAL"
Print
	"$TERMINAL" -e fzopen
Pause
	mpc -q toggle
super + shift + {p,n}
	mpc -q {prev,next}
XF86Audio{Prev,Next}
	mpc -q {prev,next}
XF86AudioPlay
	mpc -q toggle
XF86AudioMute
	pamixer -t; kill -45 $(pidof dwmblocks)
XF86Audio{Raise,Lower}Volume
	pamixer -{i,d} 2; kill -45 $(pidof dwmblocks)
XF86AudioStop
	mpc clear
XF86MonBrightness{Down,Up}
	xbacklight -{dec,inc} 10
super + Escape
	pkill -USR1 -x sxhkd
