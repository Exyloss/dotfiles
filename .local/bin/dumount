#!/bin/sh

pgrep -x dmenu && exit

devices=$(cat /etc/mtab | grep -e "/dev/sd\|simple-mtpfs" | awk '{print $2}' | grep "home")
[ "$devices" = "" ] && exit 1
chose=$(echo "$devices" | dmenu -c -p "Démonter quel appareil ?")
[ "$chose" = "" ] && exit 1
sudo umount "$chose" && notify-send "$chose démonté"
