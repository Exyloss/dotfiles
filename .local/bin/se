#!/bin/sh

file=$(find ~ -type f ! -path "*/.cache/*"| fzy)
ext=$(echo "$file" | awk -F "/" '{print $NF}' | awk -F "." '{print $NF}')
echo "$ext"
case $ext in
	"pdf"|"epub")  zathura "$file" ;;
	"jpg"|"png"|"svg"|"gif") sxiv "$file" ;;
	"mp4")  mpv "$file" ;;
	"bz2"|"tbz2"|"tgz"|"zst"|"lzma"|"bz2"|"rar"|"gz"|"tar"|"zip"|"Z"|"7z"|"xz"|"exe") ext "$file" ;;
	*)  nvim "$file";;

esac
		
