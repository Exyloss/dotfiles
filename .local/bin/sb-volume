#!/bin/sh
sink=$(pamixer --list-sinks | grep "\"Running\"" | cut -f 1 -d " ")

if [ "$sink" = "" ]; then
    vol=$(pamixer --get-volume)
    mute=$(pamixer --get-mute)
else
    vol=$(pamixer --sink "$sink" --get-volume)
    mute=$(pamixer --sink "$sink" --get-mute)
fi

[ "$mute" = true ] && echo "ðŸ”‡ MUTE"
[ "$vol" = 0 ] && echo "ðŸ”‡ 0%"
[ "$vol" -lt 30 ] && echo "ðŸ”ˆ $vol%"
[ "$vol" -lt 70 ] && echo "ðŸ”‰ $vol%"
[ "$vol" -ge 70 ] && echo "ðŸ”Š $vol%"

[ -z "${BLOCK_BUTTON}" ] || wtype -M win -M shift -P v
