#!/bin/sh
sink=$(pamixer --list-sinks | grep "\"Running\"" | cut -f 1 -d " ")

if [ "$sink" = "" ]; then
    vol=$(pamixer --get-volume)
    mute=$(pamixer --get-mute)
else
    vol=$(pamixer --sink "$sink" --get-volume)
    mute=$(pamixer --sink "$sink" --get-mute)
fi

[ "$mute" = true ] && echo "ðŸ”‡ MUTE" && exit 0
[ "$vol" = 0 ] && echo "ðŸ”‡ 0%" && exit 0
[ "$vol" -lt 30 ] && echo "ðŸ”ˆ $vol%" && exit 0
[ "$vol" -lt 70 ] && echo "ðŸ”‰ $vol%" && exit 0
[ "$vol" -ge 70 ] && echo "ðŸ”Š $vol%" && exit 0
